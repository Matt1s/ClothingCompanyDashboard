<div class="p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-bold mb-4">Inventory</h2>
  <table class="min-w-full divide-y divide-gray-200">
    <thead>
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Value</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <%= for product <- @inventory do %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap"><%= product.title %></td>
          <td class="px-6 py-4 whitespace-nowrap"><%= product.stock %></td>
          <td class="px-6 py-4 whitespace-nowrap"><%= Number.Currency.number_to_currency(product.price, unit: "€") %></td>
          <td class="px-6 py-4 whitespace-nowrap"><%= Number.Currency.number_to_currency(Decimal.mult(product.price,product.stock), unit: "€") %></td>
        </tr>
      <% end %>
      <tr>
        <td class="px-6 py-4 whitespace-nowrap font-bold">Total</td>
        <td class="px-6 py-4 whitespace-nowrap font-bold"><%= Enum.reduce(@inventory, 0, fn product, acc -> acc + product.stock end) %></td>
        <td class="px-6 py-4 whitespace-nowrap"></td>
        <td class="px-6 py-4 whitespace-nowrap font-bold"><%=  Number.Currency.number_to_currency(Enum.reduce(@inventory, 0, fn product, acc -> Decimal.add(acc, Decimal.mult(product.stock, product.price)) end), unit: "€")%></td>
      </tr>
    </tbody>
  </table>
</div>